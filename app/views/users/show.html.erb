<div class="row">
  <div class="col-md-5 col-md-offset-3">
    <h1>To-Do List</h1> 
  </div> 
</div> 
  <div class="row">
    <div class="col-md-3">
      <ul class="nav nav-pills nav-stacked">
        <li role="presentation">
          <% @user.lists.each do |list| %>
            <%= link_to list.name, user_list_path(@user,list) %>
          <% end %>
        </li> 
      </ul>
    </div>
    <div class="col-md-9">
      <div class="tab-content">
        <% @items.each do |item| %>
          <div class="media">
            <div class="media-body">
            <%= render partial: 'items/item', locals: { item: item } %>
            </div>
          </div>
        <% end %>
        <%= current_user.items.count %> Items
      </div>
    </div>
  </div>
</div>
</div class = "row" >
  <div class="col-md-4 col-md-offset-4">
    <%= render partial: 'items/form', locals: { user: @user, item: @user.items.new } %>
    <%= render partial: 'lists/form', locals: { user: @user, list: @user.lists.new } %>
  </div>  
</div>

