<div class="row">
  <div class="col-md-6 col-md-offset-1">
<h1>To-Do List</h1> 
  </div>  
</div>
<div class="row">
  <div class="col-md-5 col-md-offset-1">
    <% @items.each do |item| %>
      <div class="media">
        <div class="media-body">
        <%= render partial: 'items/item', locals: { item: item } %>
        </div>
      </div>
    <% end %>
    <%= current_user.items.count %> Items
  </div>
  <div class="col-md-4">
    <%= render partial: 'items/form', locals: { user: @user, item: @user.items.new } %>
  </div>  
</div>
