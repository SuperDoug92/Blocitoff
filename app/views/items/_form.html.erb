<%= form_for [user, item] do |f| %>
  <% if item.errors.any? %>
    <div class="alert alert-danger">
      <h4>There are <%= pluralize(item.errors.count, "error") %>errors.</h4>
      <ul>
        <% item.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_group_tag(item.errors[:name]) do %>
    <div class="forms">
      <%= f.text_area :name, rows: 4, columns: 8 %>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.submit "Add Item", class: 'btn btn-success' %>
  </div>
<% end %>