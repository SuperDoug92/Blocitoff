<%= form_for [user, list] do |f| %>
  <% if list.errors.any? %>
    <div class="alert alert-danger">
      <h4>There are <%= pluralize(list.errors.count, "error") %>errors.</h4>
      <ul>
        <% list.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_group_tag(list.errors[:name]) do %>
    <div class="forms">
      <%= f.text_area :name, rows: 1, columns: 8 %>
    </div>
  <% end %>
  <div class="form-group">
    
      <%= f.submit "Add List", class: 'btn btn-success' %>

  </div>
<% end %>